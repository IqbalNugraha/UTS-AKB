<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="profile" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/border_icon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonRegister" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/border_icon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonPlay" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/play</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonPause" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/pause</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStop" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/stop</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="kontak" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/border_icon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/work_sans</item>
    </style>
</resources>