<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/base">

    <FrameLayout
        android:id="@+id/page_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

    </FrameLayout>

    <nl.joery.animatedbottombar.AnimatedBottomBar
        android:id="@+id/bottomNavigationView"
        android:background="@color/kotak2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:abb_tabColor="@color/base"
        app:abb_tabColorSelected="@color/white"
        app:abb_indicatorColor="@color/white"
        app:abb_selectedTabType="text"
        app:abb_tabAnimationSelected="slide"
        app:abb_indicatorAppearance="round"
        app:abb_tabs="@menu/bottom_menu"
        app:abb_selectedIndex="2" />

</RelativeLayout>